@model Network.Domain.DTO.PartnerDTO



<div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h3 class="modal-title">@Res.GlobalResource.Menu_Partner</h3>
        </div>
        <div class="modal-body">
           

                <div class="form-horizontal" data-bind="with: DTO">

                    <h4>Create</h4>
                    <hr />
                    <div class="form-group">
                        @Html.LabelFor(model => model.PartnerType, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            <select data-bind="select2: 'myModalCreate',options: $root.partnerType, optionsText: 'Text', optionsValue: 'Value', value: PartnerType" class="col-xs-12 "></select>
                        </div>
                    </div>
                   
                        <div class="form-group">
                            @Html.LabelFor(model => model.PartnerName, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                <input class="form-control" data-bind="value: PartnerName" />
                            </div>
                        </div>
                    <div class="form-group" data-bind="visible: PartnerType()">
                        @Html.LabelFor(model => model.PartnerRepresentation, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            <input class="form-control" data-bind="value: PartnerRepresentation" />
                        </div>
                    </div>
                    <div class="form-group" data-bind="visible: PartnerType()">
                        @Html.LabelFor(model => model.PartnerPhone, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            <input class="form-control" data-bind="value: PartnerPhone" />
                        </div>
                    </div>

                        

                        <div class="form-group">
                            @Html.LabelFor(model => model.PartnerPersonName, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                <input class="form-control" data-bind="value: PartnerPersonName" />
                            </div>
                        </div>

                        

                        <div class="form-group">
                            @Html.LabelFor(model => model.PartnerPersonPhone, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                <input class="form-control" data-bind="value: PartnerPersonPhone" />
                            </div>
                        </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.PartnerPersonAddress, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            <input class="form-control" data-bind="value: PartnerPersonAddress" />
                        </div>
                    </div>
                    
                   
                  
                </div>
           
        </div>
        <div class="modal-footer">
            <button data-bind="click: create" class="btn btn-primary">Save</button>
            <button data-dismiss="modal" class="btn btn-default" data-bind1="click: close" type="button">Close</button>

        </div>

    </div>

</div>



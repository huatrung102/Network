@model Network.Domain.DTO.DepartmentDTO

<div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
        

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3 class="modal-title">Department</h3>
            </div>
            <div class="modal-body">



                    <div class="form-horizontal" data-bind="with: DTO">
                        <h4>Create</h4>
                        <hr />
                                                


                        <div class="form-group">
                            @Html.LabelFor(model => model.DepartmentName, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                <input class="form-control" data-bind="value: DepartmentName" />
                            </div>
                        </div>


                        <div class="form-group">
                            @Html.LabelFor(model => model.DepartmentGroup, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                <select style="width:400px!important" data-bind="options: $root.departmentGroup, optionsText: 'Text', optionsValue: 'Value', value: DepartmentGroup" class="col-xs-12 "></select>
                            </div>
                        </div>                                              
                    </div>
               


            </div>


        <div class="modal-footer">
            <button data-bind="click: create" class="btn btn-primary">Save</button>
            <button data-dismiss="modal" class="btn btn-default" type="button">Close</button>

        </div>

    </div>

</div>












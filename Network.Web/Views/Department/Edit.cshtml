@model Network.Domain.DTO.DepartmentDTO

<div class="modal-dialog" >

    <!-- Modal content-->
    <div class="modal-content">


        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h3 class="modal-title">Department</h3>
        </div>
        <div class="modal-body">



            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal" data-bind="with: selectedDTO">
                    <h4>Edit</h4>
                    <hr />



                    <div class="form-group">
                        @Html.LabelFor(model => model.DepartmentName, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            <input class="form-control" data-bind="value: DepartmentName" />
                        </div>
                    </div>


                    <div class="form-group">
                        @Html.LabelFor(model => model.LocationName, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            <select style="width:400px!important"data-bind="options: $root.locations, optionsText: 'LocationName', optionsValue: 'LocationId'" class="col-xs-12 "></select>
                        </div>
                        <!--, value: LocationId-->
                    </div>      
                </div>
            }


        </div>


        <div class="modal-footer">
            <button data-bind="click: edit" class="btn btn-primary">Save</button>
            <button data-dismiss="modal" class="btn btn-default" type="button">Close</button>

        </div>

    </div>

</div>











